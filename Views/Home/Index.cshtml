@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>This project is about calculating car mileage statistics.</p>
</div>
<div class="chart-container">
    <canvas id="timeLineChart"  style="height:40vh; width:80vw"></canvas>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.js" integrity="sha256-nZaxPHA2uAaquixjSDX19TmIlbRNCOrf5HO1oHl5p70=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/hammerjs@2.0.8"></script>
<script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-zoom@0.7.4"></script>
<script>
    var ctxTime = document.getElementById("timeLineChart").getContext('2d');
var chart = new Chart(ctxTime, {
    type: 'line',
data: {
  datasets: [
    {
      label: ["Odometer"],
      data: [{"x":"01/01/2020 00:00:00","y":50000},{"x":"01/04/2020 00:00:00","y":53000},{"x":"01/20/2020 00:00:00","y":54000},{"x":"02/03/2020 00:00:00","y":59000},{"x":"02/10/2020 00:00:00","y":60000}],
      borderColor: "#6495ED",
    }
  ]
},
options: {
    scales: {
        xAxes: [{
            type: 'time',
            distribution: 'linear'
        }]
    },
}
});
</script>